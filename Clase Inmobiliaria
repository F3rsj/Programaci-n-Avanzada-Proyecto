    public boolean modificarProyecto(String nombreAntiguo, String nombreNuevo) {
        Proyecto p = proyectosPorNombre.get(nombreAntiguo);
        if (p != null) {
            proyectosPorNombre.remove(nombreAntiguo);
            p.setNombre(nombreNuevo);
            proyectosPorNombre.put(nombreNuevo, p);
