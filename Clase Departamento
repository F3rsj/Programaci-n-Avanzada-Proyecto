import java.util.ArrayList;
import java.util.List;

public class Departamento {
    private double precio;
    private final List<Cliente> clientesInteresados;

    public Departamento(double precio) {
        this.precio = precio;
        this.clientesInteresados = new ArrayList<>();
    }

    public double getPrecio() {
        return precio;
    }
    public void setPrecio(double precio) {
        this.precio = precio;
    }

    public List<Cliente> getClientesInteresados() {
        return clientesInteresados;
    }

    public void agregarCliente(Cliente c) {
        clientesInteresados.add(c);
    }

    public void agregarCliente(String rut, String nombre, double presupuesto) {
        Cliente nuevo = new Cliente(rut, nombre, presupuesto);
        clientesInteresados.add(nuevo);
    }

    public void mostrarInfo() {
        System.out.println("   Precio: " + precio);
        System.out.println("   Clientes interesados:");
        for (int i = 0; i < clientesInteresados.size(); i++) {
            clientesInteresados.get(i).mostrarInfo();
        }
    }
}
