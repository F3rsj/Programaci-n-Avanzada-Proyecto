import java.util.ArrayList;
import java.util.List;

public class Departamento {
    private double precioBase;
    private final List<Cliente> clientesInteresados;

    public Departamento(double precioBase) {
        this.precioBase = precioBase;
        this.clientesInteresados = new ArrayList<>();
    }

    public void agregarCliente(Cliente cliente) {
        if (cliente.getPresupuesto() >= precioBase) {
            clientesInteresados.add(cliente);
        } else {
            System.out.println("El cliente " + cliente.getNombre() + " no tiene presupuesto suficiente.");
        }
    }

    public double getPrecioBase() {
        return precioBase;
    }
    public void setPrecioBase(double precioBase) {
        this.precioBase = precioBase;
    }

    public List<Cliente> getClientesInteresados() {
        return clientesInteresados;
    }
    public double calcularPrecioFinal() {
        int demanda = clientesInteresados.size();
        double incremento = 0.05; // 5% por cliente interesado
        return precioBase * (1 + (demanda * incremento));
    }

    public void mostrarInfo() {
        System.out.println("   Precio: " + precio);
        System.out.println("   Clientes interesados:");
        for (int i = 0; i < clientesInteresados.size(); i++) {
            clientesInteresados.get(i).mostrarInfo();
        }
    }
}
