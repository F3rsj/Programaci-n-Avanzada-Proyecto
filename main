import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Main {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        Inmobiliaria inmobiliaria = new Inmobiliaria("InmoChile");
        CargaDatos.cargarDatosIniciales(inmobiliaria);

        int opcion;
        do {
            System.out.println("\n=== MENÚ INMOBILIARIA ===");
            System.out.println("1. Insertar cliente en departamento");
            System.out.println("2. Mostrar listado de clientes por proyecto");
            System.out.println("3. Listar proyectos");
            System.out.println("0. Salir");
            System.out.print("Elija una opción: ");
            opcion = Integer.parseInt(br.readLine());

            switch (opcion) {
                case 1:
                    System.out.print("Ingrese nombre del proyecto: ");
                    String nomProyecto = br.readLine();
                    Proyecto proyecto = inmobiliaria.buscarProyectoPorNombre(nomProyecto);
                    if (proyecto != null) {
                        System.out.print("Ingrese índice del departamento: ");
                        int idxDep = Integer.parseInt(br.readLine());
                        System.out.print("Ingrese rut cliente: ");
                        String rut = br.readLine();
                        System.out.print("Ingrese nombre cliente: ");
                        String nombre = br.readLine();
                        System.out.print("Ingrese presupuesto cliente: ");
                        double presupuesto = Double.parseDouble(br.readLine());

                        proyecto.agregarClienteADepartamento(rut, nombre, presupuesto, idxDep);
                        System.out.println(" Cliente agregado correctamente.");
                    } else {
                        System.out.println(" Proyecto no encontrado.");
                    }
                    break;

                case 2:
                    System.out.print("Ingrese nombre del proyecto: ");
                    String nomProyecto2 = br.readLine();
                    Proyecto proyecto2 = inmobiliaria.buscarProyectoPorNombre(nomProyecto2);
                    if (proyecto2 != null) {
                        for (int i = 0; i < proyecto2.getDepartamentos().size(); i++) {
                            Departamento dep = proyecto2.getDepartamentos().get(i);
                            System.out.println("Departamento " + i + " → " + dep);
                            for (Cliente cli : dep.getClientesInteresados()) {
                                System.out.println("   - " + cli);
                            }
                        }
                    } else {
                        System.out.println(" Proyecto no encontrado.");
                    }
                    break;

                case 3:
                    inmobiliaria.listarProyectos();
                    break;

                case 0:
                    System.out.println(" Saliendo del sistema...");
                    break;

                default:
                    System.out.println("Opción inválida.");
            }
        } while (opcion != 0);
    }
}
